@model WebUI.Models.PasswordChangeViewModel

@{
    ViewBag.Title = "ChangePassword";
}

@using (Html.BeginHorizontalForm())
{
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>Zmiana hasła</legend>

 <div class="control-group">
            @Html.LabelFor(model => model.OldPassword, new { @class = "control-label" })
            <div class="controls">
            @Html.EditorFor(model => model.OldPassword)
            @Html.ValidationMessageFor(model => model.OldPassword)
        </div></div>

 <div class="control-group">
            @Html.LabelFor(model => model.NewPassword, new { @class = "control-label" })
            <div class="controls">
            @Html.EditorFor(model => model.NewPassword)
            @Html.ValidationMessageFor(model => model.NewPassword)
        </div></div>

 <div class="control-group">
            @Html.LabelFor(model => model.NewPasswordConfirmation, new { @class = "control-label" })
            <div class="controls">
            @Html.EditorFor(model => model.NewPasswordConfirmation)
            @Html.ValidationMessageFor(model => model.NewPasswordConfirmation)
        </div></div>

   <div class="control-group">
                   <div class="controls">
            <input type="submit" value="Zmień hasło" class="btn btn-primary" />
       </div></div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
