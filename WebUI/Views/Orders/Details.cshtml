@model Domain.Entities.Order

@{
    ViewBag.Title = "Details";
}
<style type ="text/css">
    #freelance dt {
        overflow: visible;
        width: 220px !important;
        margin-right: 8px;
    }
.dl-horizontal > dd:after {
  display: table;
  content: "";
  clear: both;

}
    </style>
<fieldset>
    <div class="row-fluid">
    <legend>Szczególy zlecenia</legend>
    <div class ="span12">
        <div class="span6">
    <h4>Dane zleceniodawcy</h4>
        @if (Model.Customer != null)
        {
            Html.RenderPartial("_UserDetailsShared", Model.Customer);
        }

        @if(Model.Company != null)
        {
            Html.RenderPartial("_CompanyDetailsShared", Model.Company);
        }
            </div>
        <div class="span6">
    <h4>Dane zlecenia:</h4>
    <dl class="dl-horizontal text-overflow" id="freelance">
         <dt>@Html.DisplayNameFor(model => model.receivingDate)</dt>
        <dd>@Html.DisplayFor(model => model.receivingDate)</dd>

    <dt>@Html.DisplayNameFor(model => model.endDate)</dt>
    <dd>@Html.DisplayFor(model => model.endDate)</dd>
    
        <dt>@Html.DisplayNameFor(model => model.EquipmentType.EquipmentTypeName)</dt>
    <dd> @Html.DisplayFor(model => model.EquipmentType.EquipmentTypeName)</dd>

     <dt>@Html.DisplayNameFor(model => model.OrderStatus.OrderStatusName)<//dt>
    <dd> @Html.DisplayFor(model => model.OrderStatus.OrderStatusName)</dd>
    <dt>     @Html.DisplayNameFor(model => model.additionalInformation)</dt>
    <dd>    @Html.DisplayFor(model => model.additionalInformation)</dd>
    <dt>@Html.DisplayNameFor(model => model.Description)</dt>
    <dd> @Html.DisplayFor(model => model.Description)</dd>
        </dl>
            </div>
    </div>

    <div class="span6 offset2">
        <table class="table table-striped table-condensed table-bordered">
            <thead>
                <tr>
                    <th>
                        Rodzaj naprawy
                    </th>
                    <th>
                        Wycena
                    </th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.ReperairCostList)
            {
                <tr>
                    <td>
                        @item.ReperairType.Description
                    </td>
                    <td>
                        @item.Price
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
        </div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.OrderID }) |
    @Html.ActionLink("Pokaż wszystkie", "Index")
</p>
