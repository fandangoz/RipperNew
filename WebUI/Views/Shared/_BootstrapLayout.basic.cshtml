@using System.Web.Optimization
@using BootstrapSupport
@using NavigationRoutes
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>@ViewBag.Title</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="@Styles.Url("~/content/css")" rel="stylesheet"/>
        <link href="~/Content/bootstrap-select.min.css" rel="stylesheet" />"
        <link href="~/Content/datepicker.css" rel="stylesheet" />
                 @RenderSection("head", required: false)
             @Html.Partial("_html5shiv")
            <script src="~/Scripts/jquery-2.0.3.js" ></script>
    <script src="~/Scripts/jquery-ui-1.10.3.js" ></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
        <script src="~/Scripts/bootstrap-validation.js"></script>
        <script src="~/Scripts/bootstrap-select.min.js"></script>
        <script src="~/Scripts/bootstrap-datepicker.js"></script>

    </head>
    <body>
       <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="/" title="change in _bootstrapLayout.basic.cshtml">Kosiarz</a>
                    <div class="nav-collapse collapse">
                        <ul class="nav pull-right">
                            <li>
                            @Html.Navigation()</li>
                            @if(HttpContext.Current.User.Identity.Name == "")
                            {
                            <li>
                             @Html.ActionLink("Zaloguj","LogIn", "Account")
                            </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>        
        <div class="container">
            @Html.Partial("_alerts")
            @Html.Partial("_validationSummary")
            @RenderBody()   
            <hr>
            <footer>
                <p>&copy; Company @System.DateTime.Now.ToString("yyyy")</p>
            </footer> 
        </div>
         @Scripts.Render("~/js")
         @RenderSection("Scripts", required: false)
    </body>
</html>

